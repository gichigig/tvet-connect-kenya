# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy to .env and fill in your production values

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tvet_connect_production
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Server Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_GENERAL_MAX=1000
RATE_LIMIT_GENERAL_WINDOW=900000
RATE_LIMIT_HEAVY_MAX=100
RATE_LIMIT_HEAVY_WINDOW=3600000

# Security Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Firebase Configuration (Keep existing)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
***REMOVED***=your_access_key
***REMOVED***=your_secret_key
S3_BUCKET_NAME=your_s3_bucket

# BigBlueButton Configuration
BBB_URL=https://your-bbb-server.com/bigbluebutton/
BBB_SECRET=your_bbb_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Database Pool Configuration
DB_POOL_MAX=100
DB_POOL_MIN=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# Redis Pool Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_CONNECTION_TIMEOUT=10000
