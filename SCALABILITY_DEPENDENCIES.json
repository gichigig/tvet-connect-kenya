# PACKAGE.JSON DEPENDENCIES FOR SCALABILITY
# Add these dependencies to your package.json

{
  "scalabilityDependencies": {
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "prometheus-api-metrics": "^3.2.2",
    "winston": "^3.11.0",
    "bull": "^4.12.2",
    "node-cache": "^5.1.2",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "artillery": "^2.0.0",
    "autocannon": "^7.12.0",
    "clinic": "^12.0.0"
  },
  "scripts": {
    "start:production": "NODE_ENV=production node api-server/server.js",
    "start:scalable": "NODE_ENV=production node api-server/server-scalable.js",
    "db:migrate": "node api-server/scripts/migrate.js",
    "db:seed": "node api-server/scripts/seed.js",
    "test:load": "artillery run load-test.yml",
    "test:stress": "autocannon -c 100 -d 60 http://localhost:3001/api/enhanced/health",
    "monitor": "clinic doctor -- node api-server/server.js",
    "cache:clear": "node api-server/scripts/clear-cache.js",
    "health:check": "curl http://localhost:3001/api/enhanced/health"
  }
}
